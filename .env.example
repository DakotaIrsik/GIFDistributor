# GIFDistributor Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-...

# Application Environment
NODE_ENV=development  # development | staging | production

# API Configuration
API_BASE_URL=http://localhost:3000
API_TIMEOUT=30000

# Storage Configuration (future)
# STORAGE_PROVIDER=r2  # r2 | s3 | local
# STORAGE_BUCKET=gifdistributor-dev
# STORAGE_REGION=auto

# CDN Configuration (future)
# CDN_BASE_URL=https://cdn.example.com
# CDN_CACHE_TTL=86400

# Database Configuration (future)
# DATABASE_URL=postgresql://user:pass@localhost:5432/gifdistributor
# DATABASE_POOL_SIZE=10

# Redis Configuration (future)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=

# Platform API Keys (future)
# GIPHY_API_KEY=
# TENOR_API_KEY=
# TENOR_CLIENT_KEY=

# Security Configuration
# SESSION_SECRET=
# JWT_SECRET=
# RATE_LIMIT_WINDOW=900000  # 15 minutes
# RATE_LIMIT_MAX_REQUESTS=100

# Monitoring & Logging (future)
# LOG_LEVEL=info  # error | warn | info | debug
# SENTRY_DSN=
# METRICS_ENABLED=true
